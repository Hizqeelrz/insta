.col-md-8.col-md-offset-2
	.row
		.panel.panel-default
			.panel-heading
				%h1 Post Pic
			.panel-body
				= simple_form_for @pic, html: { multipart: true } do |f|
					- if @pic.errors.any?
						#errors
							%h2
							= pluralize(@pic.errors.count, "error")
							Prevent this pic from saving
							%ul
								- @pic.errors.full_messages.each do |msg|
									%li= msg

					.form-group
						= f.input :image, input_html: { class: "form-control" }
					.form-group
						= f.input :title, input_html: { class: "form-control" }
					.form-group
						= f.input	:description, input_html: { class: "form-control" }

					= f.button :submit, class: "btn btn-success btn-sm"
					|
					= link_to "Back", root_path, class: "btn btn-primary btn-sm"